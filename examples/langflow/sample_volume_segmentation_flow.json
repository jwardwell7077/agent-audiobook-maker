{
  "name": "Volume Chapter Segmentation Demo",
  "description": "Load a volume manifest, select chapter, segment into utterances, write JSONL",
  "components": [
    {
      "id": "loader-node-1",
      "type": "ChapterVolumeLoader",
      "data": {
        "manifest_path": "REPLACE_ABSOLUTE_PATH_TO_volume.json",
        "directory": "",
        "data_root": "",
        "chapter_index": 0,
        "log_debug": true
      },
      "position": {"x": 100, "y": 100}
    },
    {
      "id": "segment-node-1",
      "type": "SegmentDialogueNarration",
      "data": {
        "merge_short_sentences": true,
        "min_len_to_keep": 2
      },
      "position": {"x": 450, "y": 100}
    },
    {
      "id": "writer-node-1",
      "type": "UtteranceJSONLWriter",
      "data": {
        "data_root": "REPLACE_ABSOLUTE_PROJECT_ROOT",
        "annotation_version": "v0.1.0"
      },
      "position": {"x": 800, "y": 100}
    }
  ],
  "edges": [
    {
      "id": "e-loader-selected_chapter-segment-selected_chapter",
      "source": "loader-node-1",
      "sourceHandle": "selected_chapter",
      "target": "segment-node-1",
      "targetHandle": "selected_chapter"
    },
    {
      "id": "e-segment-utterances_payload-writer-utterances_payload",
      "source": "segment-node-1",
      "sourceHandle": "utterances_payload",
      "target": "writer-node-1",
      "targetHandle": "utterances_payload"
    }
  ]
}
