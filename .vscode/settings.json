{
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    // Force VS Code to use the project virtualenv
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv311/bin/python",
    // Ensure new integrated terminals have venv on PATH (doesn't retroactively fix existing terminals)
    "terminal.integrated.env.linux": {
        "VIRTUAL_ENV": "${workspaceFolder}/.venv311",
        "PATH": "${workspaceFolder}/.venv311/bin:${env:PATH}"
    },
    // Auto-activate environment when opening Python terminals
    "python.terminal.activateEnvironment": true
}