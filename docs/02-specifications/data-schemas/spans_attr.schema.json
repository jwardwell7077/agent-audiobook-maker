{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.org/schemas/spans_attr.schema.json",
  "title": "Spans Attribution Bundle",
  "type": "object",
  "required": ["spans_attr"],
  "properties": {
    "spans_attr": {
      "type": "array",
      "items": { "$ref": "#/$defs/SpanAttributionRecord" }
    }
  },
  "$defs": {
    "SpanAttributionRecord": {
      "type": "object",
      "required": [
        "book_id",
        "chapter_index",
        "chapter_number",
        "block_id",
        "segment_id",
        "type",
        "character_name",
        "attribution",
        "provenance"
      ],
      "properties": {
        "span_uid": { "type": ["string", "number", "null"] },
        "book_id": { "type": ["string", "number"] },
        "chapter_index": { "type": ["integer", "number"] },
        "chapter_number": { "type": ["integer", "number"] },
        "block_id": { "type": ["string", "integer", "number"] },
        "segment_id": { "type": ["integer", "number"] },
        "type": { "type": "string", "enum": ["dialogue", "narration"] },
        "role": { "type": ["string", "null"] },
        "text_norm": { "type": ["string", "null"] },
        "character_name": { "type": "string" },
        "character_id": { "type": ["string", "null"] },
        "attribution": {
          "type": "object",
          "required": ["confidence", "method", "evidence"],
          "properties": {
            "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
            "method": { "type": "string" },
            "evidence": {
              "type": "object",
              "properties": {
                "detection": {
                  "type": "object",
                  "properties": {
                    "location": { "type": ["string", "null"] },
                    "pattern": { "type": ["string", "null"] },
                    "method": { "type": ["string", "null"] },
                    "excerpt": { "type": ["string", "null"] },
                    "distance": { "type": ["integer", "number", "null"] }
                  },
                  "additionalProperties": true
                },
                "confidence": {
                  "type": "object",
                  "additionalProperties": true
                }
              },
              "additionalProperties": true
            }
          },
          "additionalProperties": false
        },
        "provenance": {
          "type": "object",
          "required": ["rules", "version"],
          "properties": {
            "rules": { "type": "string" },
            "version": { "type": "string" }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    }
  }
}
