{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "toc.schema.json",
    "title": "Table of Contents",
    "type": "object",
    "required": [
        "span",
        "entries",
        "warnings"
    ],
    "properties": {
        "span": {
            "type": "array",
            "items": {
                "type": "integer",
                "minimum": 0
            },
            "minItems": 2,
            "maxItems": 2
        },
        "entries": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "title",
                    "page",
                    "raw",
                    "line_in_toc"
                ],
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "page": {
                        "type": "integer",
                        "minimum": 1
                    },
                    "raw": {
                        "type": "string"
                    },
                    "line_in_toc": {
                        "type": "integer",
                        "minimum": 0
                    }
                }
            }
        },
        "warnings": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    }
}