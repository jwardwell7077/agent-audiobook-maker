{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "front_matter.schema.json",
    "title": "Front Matter",
    "type": "object",
    "required": [
        "span",
        "text_sha256",
        "warnings",
        "document_meta"
    ],
    "properties": {
        "span": {
            "type": "array",
            "items": {
                "type": "integer",
                "minimum": 0
            },
            "minItems": 2,
            "maxItems": 2
        },
        "text_sha256": {
            "type": "string"
        },
        "warnings": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "document_meta": {
            "type": "object",
            "required": [
                "page_markers"
            ],
            "properties": {
                "page_markers": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": [
                            "page_index",
                            "line_index_global",
                            "value"
                        ],
                        "properties": {
                            "page_index": {
                                "type": "integer",
                                "minimum": 1
                            },
                            "line_index_global": {
                                "type": "integer",
                                "minimum": 0
                            },
                            "value": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}
